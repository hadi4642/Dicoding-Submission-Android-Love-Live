<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        app:tint="@color/white"
        app:borderWidth="0dp"
        android:src="@drawable/ic_share"
        android:backgroundTint="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationZ="1dp"
                android:layout_marginTop="28dp"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>

            <View
                android:id="@+id/vBackground"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                tools:background="@color/karin_secondary"/>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="500dp">

                    <ImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="300dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitStart"
                        android:layout_height="wrap_content"
                        tools:src="@drawable/karin_asaka" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:layout_marginStart="-140dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        tools:background="@color/karin"
                        android:paddingBottom="8dp"
                        tools:text="Karin Asaka"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_bold"
                        tools:text="CV: Miyu Kubota"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="end"
                        tools:src="@drawable/karin_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_desc"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_reguler"
                                    android:text="@string/year"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="@string/colon"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tvYear"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_reguler"
                                    tools:text="2"
                                    android:textColor="@color/white" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_reguler"
                                    android:text="@string/birthday"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="@string/colon"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tvBirthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_reguler"
                                    tools:text="June 29"
                                    android:textColor="@color/white" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_reguler"
                                    android:text="@string/blood_type"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="@string/colon"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tvBloodType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_reguler"
                                    tools:text="A"
                                    android:textColor="@color/white" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_reguler"
                                    android:text="@string/height"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="@string/colon"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tvHeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_reguler"
                                    tools:text="167 cm"
                                    android:textColor="@color/white" />

                            </TableRow>

                        </TableLayout>

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/nunito_reguler"
                            android:textColor="@color/white"
                            tools:text="She's submitted photos to fashion magazines. Despite her grown-up looks, she can be surprisingly pure and innocent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="60dp"
                android:layout_below="@id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/background"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold"/>

                <TextView
                    android:id="@+id/tvBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_reguler"
                    tools:text="@string/desc"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personality"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold"/>

                <TextView
                    android:id="@+id/tvPersonality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nunito_reguler"
                    tools:text="@string/desc"/>

                <TextView
                    android:id="@+id/labelVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold"/>

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/labelSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/song"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/viewGroupSong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_music">

                    <ImageButton
                        android:id="@+id/playButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_play_circle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvStartTime"
                        app:layout_constraintStart_toEndOf="@id/playButton"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvSongName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:fontFamily="@font/nunito_semibold"
                            tools:text="Vivid World" />

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/colorPrimary"
                            android:progressTint="@color/colorPrimary"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_0_00"
                        android:paddingEnd="8dp"
                        android:fontFamily="@font/nunito_reguler"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvEndTime"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slash"
                        app:layout_constraintStart_toEndOf="@id/tvStartTime"
                        app:layout_constraintEnd_toStartOf="@id/tvEndTime"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/nunito_reguler"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:fontFamily="@font/nunito_reguler"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0.00" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/references"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_bold"/>

                <TextView
                    android:id="@+id/tvReferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/nunito_reguler"
                    android:clickable="true"
                    android:textColor="@color/karin"
                    tools:text="@string/desc"
                    android:focusable="true" />


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>